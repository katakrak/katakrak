include_once 'katakrak_boletin.features.inc';


function katakrak_boletin_mail_alter(&$message) {
  if ($message['module'] == 'simplenews') {
    $message['headers']['Content-Type'] = 'text/html';
    $message['headers']['Errors-To'] = 'buletina@katakrak.net';
  }
}