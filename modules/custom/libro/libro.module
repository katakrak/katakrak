function libro_portadas_form_submit($form, &$form_state){
  $limit = $form_state['values']['limit'];
  $max = $form_state['values']['max'];
  $skip = $form_state['values']['skip'];
  $batch = array(
    'title' => t('Recuperando portadas'),
    'operations' => array(
      array('libro_portada_process', array($limit, $max, $skip)),
    ),
    'finished' => 'libro_portadas_finish',
  );
  batch_set($batch);  
}

function libro_portada_process($limit, $max, $skip, &$context) {
  $nodes = db_select('node', 'n');
  $nodes->addJoin('LEFT', 'field_data_field_libro_portada_checked', 'p', 'p.entity_id = n.nid');
  $or = db_or()->isNull('p.field_libro_portada_checked_value')->condition('p.field_libro_portada_checked_value', 0);
  $nodes->condition('n.type', 'libro')->condition($or)->fields('n', array('nid'));
  if (!isset($context['sandbox']['progress'])) {
    $context['sandbox']['progress'] = $skip;
    $context['sandbox']['max'] = $max ? $max + $skip : $nodes->execute()->rowCount();
    $context['results']['conseguidas'] = 0;
    $context['results']['no_conseguidas'] = 0;
    $context['results']['imagenes_existentes'] = 0;
  }
  
  $nids = $nodes->range(0, $limit)->execute()->fetchAll();
  
  foreach ($nids as $nid) {
    $node = node_load($nid->nid);
    $download_cover = FALSE;
    if ($node->field_libro_portada['und'][0]['uri']) {
      if (!file_exists($node->field_libro_portada['und'][0]['uri'])) {
        $download_cover = TRUE;
      }
      else {
        $node->field_libro_portada_checked['und'][0]['value'] = 1;
        $context['results']['imagenes_existentes']++;
      }
    }
    else {
      $download_cover = TRUE;
    }
    
    if ($download_cover) {
      $ean = $node->field_libro_ean['und'][0]['value'];
      $url = sprintf("http://image.casadellibro.com/a/l/t0/%s/%s.jpg", substr($ean, 11, 2), $ean);
      $file = create_cover($url, $ean);
      if (!empty($file)) {
        $node->field_libro_portada['und'][0] = $file;
        $node->field_libro_portada['und'][0]['title'] = $node->title;
        $node->field_libro_portada['und'][0]['alt'] = $node->title;
        $node->field_libro_portada_checked['und'][0]['value'] = 1;
        $context['results']['conseguidas'] ++;
      }
      else {
        $context['results']['no_conseguidas'] ++;
        $node->field_libro_portada_checked['und'][0]['value'] = 2;
      }
    }
    node_save($node);
    $context['sandbox']['progress'] += 1;
  }
  

  $context['message'] = t("Processed @progress of @max books", array('@progress' => $context['sandbox']['progress'], '@max' => $context['sandbox']['max']));
  if ($context['sandbox']['progress'] != $context['sandbox']['max']) {
    $context['finished'] = $context['sandbox']['progress'] / $context['sandbox']['max'];
  }
}

function libro_portadas_finish($success, $results, $operations) {
  if ($success) {
    drupal_set_message(t("@count book convers found", array('@count' => $results['conseguidas'])));
    drupal_set_message(t("@count book covers not found", array('@count' => $results['no_conseguidas'])));
    drupal_set_message(t("@count book covers already there", array('@count' => $results['imagenes_existentes'])));
  }
  else {
    // An error occurred.
    // $operations contains the operations that remained unprocessed.
    $error_operation = reset($operations);
    $message = t('An error occurred while processing %error_operation with arguments: @arguments', array('%error_operation' => $error_operation[0], '@arguments' => print_r($error_operation[1], TRUE)));
    drupal_set_message($message, 'error');
  }
}


