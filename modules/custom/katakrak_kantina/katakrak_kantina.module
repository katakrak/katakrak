include_once 'katakrak_kantina.features.inc';

/**
 * Implement hook_query alter
 * @param type $query
 */
function katakrak_kantina_query_alter($query) {
   if ($query->hasTag('node_export_features')) {
     $query->condition('n.type', 'page');
   }
}



function katakrak_kantina_menu() {
  $items = array();
  $items['cantina/denoche'] = array(
    'title' => 'De noche',
    'page callback' => 'katakrak_kantina_denoche_page',
    'access callback' => TRUE,
  );
  return $items;
}

function katakrak_kantina_denoche_page() {
  return theme('katakrak_kantina_denoche_page');
}


/**
 * Implements hook_block_info().
 */
function katakrak_kantina_block_info() {
  $blocks = array();
  $blocks['katakrak_reserva_block'] = array(
    'info' => t('Reserva block'),
    // Not worth caching.
    'cache' => DRUPAL_NO_CACHE,
  );
  $blocks['katakrak_kantina_page_header'] = array(
    'info' => t('Header cantina'),
    // Not worth caching.
    'cache' => DRUPAL_CACHE_PER_PAGE,
  );
  
  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function katakrak_kantina_block_view($delta) {
  global $language;
  
  if ($delta == 'katakrak_reserva_block') {
    $block['title'] = t('Reservas');
    $block['content'] = drupal_get_form('katakrak_kantina_reserva_form');
    return $block;
  }
  if ($delta == 'katakrak_kantina_page_header') {
        $block['content'] = theme('katakrak_kantina_page_header', array('lang' => $language->language));
    return $block;
  }
}

/**
 * Implementation of hook_theme
 */
function katakrak_kantina_theme() {
  $path = drupal_get_path('module', 'katakrak_kantina');
  return array(
    'katakrak_kantina_page_header' => array(
      'template' => 'katakrak-kantina-page-header',
      'arguments' => array(
        'lang' => NULL,
      ),
      'path' => $path . '/templates',
    ),
    'katakrak_kantina_denoche_page' => array(
      'template' => 'katakrak-kantina-denoche-page',
      'path' => $path . '/templates',
    ),
    'katakrak_reserva_block' => array(
      'template' => 'katakrak-reserva-block',
      'arguments' => array(
        'form' => NULL
      ),
      'render element' => 'form',
      'path' => $path . '/templates',
    ),
  );
}

function katakrak_kantina_reserva_form($form, &$form_state) {
  $form['datos'] = array(
    '#type' => 'fieldset', 
    '#title' => t('Datos personales'), 
    '#weight' => 5, 
    '#collapsible' => FALSE, 
  );
  $form['datos']['nombre'] = array(
    '#type' => 'textfield',
    '#title' => t('Nombre'),
    '#title_display' => 'invisible',
    '#required' => TRUE,
    '#attributes' => array(
      'placeholder' => t('Nombre')
    ),
  );
  $form['datos']['comensales'] = array(
    '#type' => 'textfield',
    '#title' => t('Comensales'),
    '#title_display' => 'invisible',
    '#required' => TRUE,
    '#size' => 60,
    '#attributes' => array(
      'placeholder' => t('Nº de comensales')
    ),
    '#element_validate' => array('element_validate_integer_positive'),
  );
  $form['datos']['email'] = array(
    '#type' => 'textfield',
    '#title' => t('Email'),
    '#title_display' => 'invisible',
    '#required' => TRUE,
    '#size' => 60,
    '#attributes' => array(
      'placeholder' => t('E-mail')
    ),
  );
  $form['date'] = array(
  '#type' => 'date_popup',
  '#title' => t('Fecha y hora'),
  '#required' => TRUE,
  '#title_display' => 'invisible',
  '#date_format' => 'Y-m-d H:i',
  );
  $form['datos']['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
  );
  $form['#theme'] = 'katakrak_reserva_block';
  return $form;
}


function katakrak_kantina_reserva_form_submit($form, &$form_state) {
}

/**
* Implements hook_mollom_form_list().
*/
function katakrak_kantina_mollom_form_list() {
  $forms['katakrak_kantina_reserva_form'] = array(
    'title' => t('Reserva form'),
  );
  return $forms;
}
/**
* Implements hook_mollom_form_info().
*/
function katakrak_kantina_mollom_form_info($form_id) {
  switch ($form_id) {
    case 'katakrak_kantina_reserva_form':
      $form_info = array(
        'mode' => MOLLOM_MODE_CAPTCHA,   
      );
      return $form_info;
  }
}

function katakrak_kantina_preprocess_katakrak_kantina_page_header(&$vars) {
  $vars['logo'] = l(theme('image', array('path' => drupal_get_path('theme', 'coworker'). '/images/kantina/kantina.jpg')), 'cantina', array('html' => TRUE));
  $dedia_imagen = theme('image', array('path' => drupal_get_path('theme', 'coworker'). '/images/kantina/dedia.jpg'));
  $denoche_imagen = theme('image', array('path' => drupal_get_path('theme', 'coworker'). '/images/kantina/denoche.jpg'));
  $blog_imagen = theme('image', array('path' => drupal_get_path('theme', 'coworker'). '/images/kantina/kantina_blog.jpg'));
  if ($vars['lang'] == 'es') {
    $vars['link_dedia'] = l($dedia_imagen.'<h3>De día</h3>', 'node/44194', array('html' => TRUE));
    $vars['link_denoche'] = l($denoche_imagen.'<h3>De noche</h3>', 'cantina/denoche', array('html' => TRUE));
    $vars['link_blog'] = l($blog_imagen.'<h3>Blog</h3>', 'cantina/blog', array('html' => TRUE));
  }
  elseif ($vars['lang'] == 'eu') {
    $vars['link_dedia'] = l($dedia_imagen.'<h3>Egunez</h3>', 'node/44194', array('html' => TRUE));
    $vars['link_denoche'] = l($denoche_imagen.'<h3>Gauez</h3>', 'node/2222', array('html' => TRUE));
    $vars['link_blog'] = l($blog_imagen.'<h3>Blog</h3>', 'cantina/blog', array('html' => TRUE));
  }
}