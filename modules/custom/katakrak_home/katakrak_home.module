include_once 'katakrak_home.features.inc';

/**
 * Implements hook_block_info().
 */
function katakrak_home_block_info() {
  $blocks = array();
  $blocks['katakrak_home_promo'] = array(
    'info' => t('Home Promo'),
    // Not worth caching.
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  return $blocks;
}


/**
 * Implements hook_block_view().
 */
function katakrak_home_block_view($delta) {
  if ($delta == 'katakrak_home_promo') {
    $block['title'] = t('Conoce Katakrak');
     $block['content'] = array(
      '#theme' => 'katakrak_home_promo',
    );
    //$block['content']['#markup'] = theme('');
    return $block;
  }
}

/**
 * Implementation of hook_theme
 */
function katakrak_home_theme() {
  $path = drupal_get_path('module', 'katakrak_home');
  return array(
    'katakrak_home_promo' => array(
      'template' => 'katakrak-home-promo',
      'path' => $path . '/templates',
    ),
  );
}

